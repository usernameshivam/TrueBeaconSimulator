{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "Build with GCC 12.2.0",
			"command": "/usr/bin/g++",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"-DBOOST_BIND_GLOBAL_PLACEHOLDERS",
				"-lboost_system",
				"-lboost_thread",
				"-lboost_coroutine",
				"-lboost_context",
				"-lboost_serialization",
				"-pthread",
				"${workspaceFolder}/*.cpp",
				"-o",
				"${fileDirname}/output"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/g++"
		}/*,
